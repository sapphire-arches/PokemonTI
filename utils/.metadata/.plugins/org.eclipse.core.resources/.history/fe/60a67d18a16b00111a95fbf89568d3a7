package bitmap.editor.panels;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;

import javax.swing.JPanel;

public class BitmapEditorPanel extends JPanel {
	public boolean [][] pixstatus;
	
	public BitmapEditorPanel (int width, int height) {
		this.pixstatus = new boolean [width][height];
		this.setPreferredSize(new Dimension(width * 8, height * 8));
	}
	
	public void paint (Graphics g) {
		g.setColor(Color.white);
		g.fillRect(0, 0, getWidth (), getHeight ());
		
		g.setColor (Color.black);
		
		for (int x = 0; x < pixstatus.length; ++x) {
			for (int y = 0; y < pixstatus [x].length; ++y) {
				if (pixstatus [x][y])
					g.fillRect (x * 8, y * 8, 8, 8);
			}
		}
	}
}
